{
  "build": {
    "beforeDevCommand": "pnpm dev:vite",
    "beforeBuildCommand": "pnpm build:vite",
    "devPath": "http://localhost:1420/",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Alley",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": "^((/Users/.+)|(C:\\\\Users\\\\.+)|(/home/.+)).+"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "deb": {
        "files": {
          "usr/share/alley/static": "./static"
        }
      },
      "identifier": "com.thepoy.alley",
      "resources": ["static"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "小路速传",
        "width": 400,
        "height": 600,
        "resizable": false
      }
    ]
  }
}
